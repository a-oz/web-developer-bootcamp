<%- include('partials/header.ejs') %>



<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome To YelpCamp!</h1>
      <p>Vew our hand-picked campgrounds from all over the world</p>

      <a href="campgrounds/new" class="btn btn-primary btn-lg">Add new campground</a>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Campgrounds!</h3>
    </div>

    <% campgrounds.forEach(camp => { %>
    <div class="col-lg-3 col-md-6">
      <div class="card text-center p-1 my-2">
        <img class="card-img-top" src="<%= camp.image %>">

        <div class="card-body">
          <h5><%= camp.name %></h5>

        </div>
      </div>
    </div>

    <% }) %>

  </div>
</div>


<%- include('partials/footer.ejs') %>